package chapter05;

class BaseballPlayer { 
	// 인스턴스 변수
	// 선수 이름(name - 문자열) 
	// 타율(battingAverage - 실수) 
	// 홈런 수(homeRuns - 정수)
	
	// 정적(클래스) 변수
	// : 생성된 선수의 총 인원(playerCount - 정수)
	// >> 모든 인스턴스에세 공유
	
	// 생성자 >> 인스턴스 변수 초기화 & 정적 변수 후위 증가(변수명++)
	
	// 인스턴스 메서드
	// : 선수의 타율과 홈런 수를 업데이트하는 메서드
	// >> 매개변수로 newBattingAverage, newHomeRuns를 받아
	//	  기존의 인스턴스 변수에 재할당
	String name;
	double battingAverage;
	int homeRuns;
	
	static int playerCount;
	
	BaseballPlayer(String name, double battingAverage, int homeruns) {
		this.name = name;
		this.battingAverage = battingAverage;
		this.homeRuns = homeruns;
		playerCount++; // 선수 생성시 전체 수증가
	}
	
	

	void updateesStatus(double newBattingAverage, int newHomeRuns) {
		battingAverage = newBattingAverage;
		homeRuns = newHomeRuns;
	}
}

	

public class MethodPractice_1 {
	public static void main(String[] args) {
		BaseballPlayer player1 = new BaseballPlayer("이대호",0.390, 5 );
		BaseballPlayer player2 = new BaseballPlayer("최동원",0.393, 10 );
		BaseballPlayer player3 = new BaseballPlayer("김태형",0.401, 23 );
		BaseballPlayer player4 = new BaseballPlayer("이승엽",0.401, 23 );
		
		System.out.println("총 생성된 선수의 수: " + BaseballPlayer.playerCount);
	}

}
